@model IEnumerable<MvcProject.Models.Review>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reviews</title>
    <link rel="stylesheet" href="~/Styles/DetailsStyle.css" />

</head>
<body>
    <h1>Reviews @Model.First().Product.Title</h1>

    <div>

        <section id="Reviews">
                    <img src="@Model.First().Product.Image" alt=reviews.Title style=" height: 120px; width:200px;" />
            @foreach (var reviews in Model)
            {

                    <article>
                        <p>User Name: @reviews.UserName</p>
                        <p>Rating: @reviews.Rating</p>
                        <p>Review: @reviews.Content</p><br>
                        <section id="Forms">
                            <form action="/Review/Edit" method"get>
                                <input type="submit" value="Edit Review" />
                            </form>
                            
                            <form action="/Review/Delete" method="get">
                                <input type="submit" value="Delete Review" /> 
                            </form>

                        </section>

                        <hr />
                    </article>
            }
                <a href="/Product/Details/@Model.First().ProductID">Details</a>
        </section>

        <div>
            <section id="Forms">
                <form action="/Review/CreateByProductID/@Model.First().ProductID" method="get">
                    <input type="submit" value="Add Review" /> <br>
                </form>
               
            </section>


        </div>
    </div>
    <a href="/Product/Index">Go Back</a>
    <footer><h6>&copy;Vehicle Reviews 2019</h6></footer>
</body>
</html>
